+        return localStorage.getItem('stripe_api_key') || 'pk_live_nuUlFGZzCqFCnx19rAfGBO9900Fx3Mpi3m';
+    }
+
+    export async function createStripe() {
+        const stripeApiKey = getStripeAPIKey();
+        return await loadStripe(stripeApiKey);
+    }
