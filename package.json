{
  "name": "polar-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "lerna run compile",
    "publish": "lerna exec --no-private -- npm publish",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lerna-run-compile": "lerna run --concurrency=1 --parallel=false compile",
    "lerna-run-dist": "lerna run --concurrency=1 --parallel=false dist",
    "lerna-run-test": "lerna run --concurrency=1 --parallel=false test",
    "lerna-npm-publish": "lerna exec --concurrency=1 --parallel=false --no-private -- npm publish",
    "rebuild": "npm run-script purge-node-modules && lerna bootstrap && npm run-script lerna-run-compile",
    "dist-version": "lerna --no-git-tag-version version patch && lerna bootstrap",
    "dist-prepare": "./sbin/mgit clean -Xfd && ./sbin/mgit clean -fd && ./sbin/mgit reset --hard HEAD && ./sbin/mgit pull",
    "dist-build": "npm run-script purge-node-modules && lerna bootstrap && npm run-script lerna-run-compile && npm run-script lerna-run-dist ",
    "dist-publish": "npm run-script lerna-npm-publish | tee dist-publish.log",
    "dist-release": "npm run-script dist-publish && lerna run dist-release",
    "dist-release-macos": "cd packages/polar-bookshelf && ./scripts/dist-release.sh macos",
    "dist-release-win": "cd packages/polar-bookshelf && ./scripts/dist-release.sh win",
    "dist-release-linux": "cd packages/polar-bookshelf && ./scripts/dist-release.sh linux",
    "lerna-outdated": "lerna exec --concurrency=1 --parallel=false --no-bail -- 'pwd && npm outdated'",
    "purge-node-modules": "rm -rf node_modules && lerna exec --concurrency=1 --parallel=false --no-bail -- 'pwd && rm -rf node_modules'",
    "ls-packages": "lerna exec --concurrency=1 --parallel=false --no-bail -- 'pwd'",
    "find-broken-imports": "find . -type f -name \"*.ts\" ! -path '*/node_modules/*' |xargs grep import |grep -E \"[\\\"'](\\.\\./)+polar\"\n"
  },
  "deprecated": {},
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
  }
}
